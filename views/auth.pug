extends layout

block content
    h1.text-center Вход / Регистрация

    .d-flex.justify-content-center.mb-4
        button#login-tab(type="button" class="btn btn-primary me-2 active") Форма Входа
        button#register-tab(type="button" class="btn btn-secondary") Форма Регистрации

    //- Форма логина
    form#login-form(method="POST" action="/login" class="mt-4")
        .mb-3
            label(for="email" class="form-label") Email
            input(type="email" name="email" id="email" class="form-control" required)
        .mb-3
            label(for="password" class="form-label") Пароль
            input(type="password" name="password" id="password" class="form-control" required)
        button(type="submit" class="btn btn-primary w-100") Войти

    //- Форма регистрации (скрыта по умолчанию)
    form#register-form(method="POST" action="/register" class="mt-4 d-none")
        .mb-3
            label(for="username" class="form-label") Имя пользователя
            input(type="text" name="username" id="username" class="form-control" required)
        .mb-3
            label(for="email" class="form-label") Email
            input(type="email" name="email" id="email" class="form-control" required)
        .mb-3
            label(for="password" class="form-label") Пароль
            input(type="password" name="password" id="password" class="form-control" required)
        button(type="submit" class="btn btn-success w-100") Зарегистрироваться

    script.
      document.addEventListener("DOMContentLoaded", function () {
        const loginTab = document.getElementById("login-tab");
        const registerTab = document.getElementById("register-tab");
        const loginForm = document.getElementById("login-form");
        const registerForm = document.getElementById("register-form");

        loginTab.addEventListener("click", () => {
          loginForm.classList.remove("d-none");
          registerForm.classList.add("d-none");
          loginTab.classList.add("active");
          registerTab.classList.remove("active");
        });

        registerTab.addEventListener("click", () => {
          registerForm.classList.remove("d-none");
          loginForm.classList.add("d-none");
          registerTab.classList.add("active");
          loginTab.classList.remove("active");
        });
      });
