doctype html
html
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet")
        title #{title}
    body
        // нав бар
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
            .container-fluid
                a.navbar-brand(href="/") Главная
                button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
                    span.navbar-toggler-icon
                .collapse.navbar-collapse#navbarNav
                    ul.navbar-nav
                        li.nav-item
                            a.nav-link(href="/products") Товары
                        li.nav-item
                            a.nav-link(href="/items") Предметы
                        li.nav-item
                            a.nav-link(href="/profile") Профиль
                        li.nav-item
                            a.nav-link(href="/login") Вход \ Регистрация
                        li.nav-item
                            form(method="POST" action="/logout" class="d-inline")
                                button.btn.btn-link.nav-link(type="submit") Выйти

        .container.mt-5
            block content
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
